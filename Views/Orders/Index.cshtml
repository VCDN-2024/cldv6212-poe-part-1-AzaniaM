@model IEnumerable<ABC_Retail.Models.Order>

<div class="text-center">
<h1 class="display-5">All Orders</h1>
<a href="@Url.Action("Register", "Orders")" class="btn btn-primary">Add New Order</a>
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Product ID</th>
            <th>Shipping Address</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Customer_Id</td>
                    <td>@order.Product_Id</td>
                    <td>@order.Shipping_Address</td>
                    <td>@order.Date.ToString("MM/dd/yyyy")</td>
                    <td>
                        <form asp-action="DeleteOrder" method="post" style="display:inline;">
                            <input type="hidden" name="partitionKey" value="@order.PartitionKey"/>
                            <input type="hidden" name="rowKey" value="@order.RowKey"/>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?)">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
</table>

</div>